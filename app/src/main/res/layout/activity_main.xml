<?xml version="1.0" encoding="UTF-8"?>

    <com.google.android.material.appbar.AppBarLayout tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/img">

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintVertical_bias="0.139"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textAlignment="center"
        android:text="AGE CALCULATOR"
        android:gravity="center_horizontal"
        android:id="@+id/txtage"/>

    <EditText
        android:layout_height="53dp"
        android:layout_width="259dp"
        tools:ignore="MissingConstraints,RtlCompat"
        app:layout_constraintStart_toStartOf="@+id/txtage"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Enter age year"
        android:id="@+id/edit_enter"
        app:layout_constraintTop_toBottomOf="@+id/txtage"
        app:layout_constraintEnd_toEndOf="@+id/txtage"
        app:layout_constraintBottom_toTopOf="@+id/txtview"
        android:singleLine="true"
        android:inputType="number"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="@+id/txtview"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textAlignment="gravity"
        android:text="Calculate age"
        android:id="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/edit_enter"
        app:layout_constraintEnd_toEndOf="@+id/txtview"
        app:layout_constraintBottom_toTopOf="@+id/txtview"
        android:backgroundTint="@color/white"/>

    <TextView
        android:layout_height="58dp"
        android:layout_width="183dp"
        tools:ignore="MissingConstraints"
        android:textStyle="normal"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textAlignment="center"
        android:text="textview"
        android:gravity="center_horizontal"
        android:id="@+id/txtview"
        tools:layout_editor_absoluteY="652dp"
        tools:layout_editor_absoluteX="78dp"/>

</com.google.android.material.appbar.AppBarLayout>